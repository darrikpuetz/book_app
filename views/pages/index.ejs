<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head') %>
</head>

<body>
    <header>
    </header>
    <main>
        <h3>Saved Books</h3>
        <p>
            <%= books.length %> books in the Collection</p>
        <% books.forEach(book => { %>
            <div class="books" data-book-id=" <%= book.id %> ">
                <%- include('../pages/books/detail', {book: book}); %>
                    <p class="details"><a href="..pages/books/<%= book.id %>">View Details</a></p>
            </div>
            <% }) %>
    </main>
</body>

</html>